@model coreOnlineBookStore.Models.Author

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<br />
<h2><center><b><u>Add Author</u></b></center></h2>
<br />

<form asp-action="Create" asp-controller="Author">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="AuthorName"><b>Author's Name</b></label>
        <input type="text" asp-for="AuthorName" class="form-control" placeholder="Enter Author's Name">
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorBiography"><b>Author's Biography</b></label>
        <input type="text" asp-for="AuthorBiography" class="form-control" placeholder=" Author's Biography">
        <span asp-validation-for="AuthorBiography" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorImage"><b>Author's Image</b></label>
        <input type="text" asp-for="AuthorImage" class="form-control" placeholder=" Author's Image">
        <span asp-validation-for="AuthorImage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Author" asp-action="Index" class="btn btn-primary">Back To List</a>
</form>

